<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_margin="5dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:id="@+id/row_tv_additional_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row_tv_title"
            android:layout_alignStart="@id/row_tv_title"
            android:layout_marginStart="0dp"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            tools:text="01.05.2020 " />

        <ImageView
                android:id="@+id/row_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_margin="8dp"
                android:adjustViewBounds="true"
                android:layout_centerVertical="true"
                tools:src="@drawable/ic_launcher_background"
                android:contentDescription="Image"/>

        <TextView
            android:id="@+id/row_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/row_img"
            android:ellipsize="end"
            android:maxLines="2"
            android:textStyle="bold"
            tools:text="Заголовок - Rostsrlmash" />

        <TextView
            android:id="@+id/row_tv_description"
            android:layout_width="267dp"
            android:layout_height="58dp"
            android:layout_below="@+id/row_tv_title"
            android:layout_alignStart="@id/row_tv_title"
            android:layout_marginStart="0dp"
            android:layout_marginTop="25dp"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="Описание новостной ленты" />

    </RelativeLayout>

</android.support.v7.widget.CardView>